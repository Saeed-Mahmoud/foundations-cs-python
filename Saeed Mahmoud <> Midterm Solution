# def changePriority(listt):
def sortToDisplay(listt): 
  for x in range(len(listt)):
    check_swap = False
    for y in range(len(listt) - x - 1):
      if listt[y][3] > listt[y + 1][3]:
        check_swap = True
        temp = listt[y]
        listt[y] = listt[y + 1]
        listt[y + 1] = temp
      if (listt[y][3] == listt[y + 1][3]) and (listt[y][1] > listt[y + 1][1]):
        check_swap = True
        temp = listt[y]
        listt[y] = listt[y + 1]
        listt[y + 1] = temp
    if not check_swap:
      return listt
  
def displayTicketsAll(l,d):
  date=input("Enter todays date in the format (YYYYMMDD): ")
  sortToDisplay(l)
  low = 0
  high = len(l) - 1
  if date <= l[0][3]:
    print(l)
  elif date >= l[-1][3]:
    print("There are no available tickets.")
  elif d.count(date)==0:
    for i in range(len(l)):
      if date < l[i][3]:
        return (l[i:])
  else:
    while low <= high:  
      mid = (low + high) // 2
      if date == l[mid][3]:
        k=mid
        low=high
      elif date < l[mid][3]:
        high = mid - 1
      else:  # if k > l[mid]
        low = mid + 1
    return (l[k:])
