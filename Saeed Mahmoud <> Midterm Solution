def adminBookTickets(listt):
  c=listt[-1][0]
  t_suf=int(c[4:])
  t_pre=c[:4]
  eventMenu()
  choice1=eval(input("Enter your choice:"))
  while (choice1 != 4):
    temp=[]
    if choice1 == 1:
      ev_id="ev001"
      date=input("Enter the date of the event (YYYYMMDD format): ")
      name=input("Enter Name of ticket holder: ")
      prio=input("Set the Priority: ")
      t_suf+=1
      new_tick=t_pre+str(t_suf)
      temp=[new_tick,ev_id,name,date,prio]
      listt.append(temp)
      return listt
    elif choice1 == 2:
      ev_id="ev002"
      date=input("Enter the date of the event (YYYYMMDD format): ")
      name=input("Enter Name of ticket holder: ")
      prio=input("Set the Priority: ")
      t_suf+=1
      new_tick=t_pre+str(t_suf)
      temp=[new_tick,ev_id,name,date,prio]
      listt.append(temp)
      return listt
    elif choice1 == 3:
      ev_id="ev003"
      date=input("Enter the date of the event (YYYYMMDD format): ")
      name=input("Enter Name of ticket holder: ")
      prio=input("Set the Priority: ")
      t_suf+=1
      new_tick=t_pre+str(t_suf)
      temp=[new_tick,ev_id,name,date,prio]
      listt.append(temp)
      return listt
    elif choice1 != 4:
      print("Your choice is invalid. Try again.")
      eventMenu()
      choice1 = eval(input("Enter your choice:"))
  print("\n---> You Exited!")


