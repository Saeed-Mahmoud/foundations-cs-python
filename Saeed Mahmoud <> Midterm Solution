def main():
  #This is the main function that will run the entire code
  u_name=input("Enter username: ")
  adm="admin"
  if u_name==adm:
    count=0
    while (count != 5): #O(1) becuase the loop is has a constant value
      p_word=input("Enter Password: ")
      pswrd="admin123123"
      if p_word!=pswrd:
        count +=1
      else:
        displayMenuAdmin()
        choice = eval(input("Enter your choice:"))
        while (choice != 7):
          if choice == 1:
            print("Under Construction")
          elif choice == 2:
            print("Under Construction")
          elif choice == 3:
            print("Under Construction")
          elif choice == 4:
            print("Under Construction")
          elif choice == 5:
            print("Under Construction")
          elif choice == 6:
            print("Under Construction")
          elif choice != 7:
            print("Your choice is invalid. Try again.")
          
          displayMenuAdmin()
          choice = eval(input("Enter your choice:"))

        print("\n---> You Exited!")
        break
      

  else:
    displayMenuUser()
    choice1=eval(input("Enter your choice:"))
    while (choice1 != 2):
      
      if choice1 == 1:
        print("Under Construction")
      elif choice1 != 2:
          print("Your choice is invalid. Try again.")
      displayMenuUser()
      choice1 = eval(input("Enter your choice:"))
    print("\n---> You Exited!")

main() 
